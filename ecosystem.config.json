{
  "name": "immoxx-server",
  "script": "server/index.ts",
  "interpreter": "tsx",
  "env": {
    "NODE_ENV": "development",
    "PORT": 5001,
    "HOST": "0.0.0.0"
  },
  "env_production": {
    "NODE_ENV": "production",
    "PORT": 5000,
    "HOST": "0.0.0.0"
  },
  "instances": 1,
  "autorestart": true,
  "watch": false,
  "max_memory_restart": "1G",
  "error_log": "./logs/pm2-error.log",
  "out_log": "./logs/pm2-out.log",
  "log_log": "./logs/pm2-combined.log",
  "time": true,
  "merge_logs": true,
  "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
  "restart_delay": 4000,
  "max_restarts": 10,
  "min_uptime": "10s",
  "env_restart": {
    "RESTART_VAR": "true"
  }
}
