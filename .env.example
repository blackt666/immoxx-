# Server Configuration
NODE_ENV=development
PORT=5001
HOST=0.0.0.0

# Database
DATABASE_URL=file:./database.sqlite

# Session
SESSION_SECRET=your-secret-key-here

# Authentication
AUTH_ENABLED=false

# OpenAI (Legacy - optional)
OPENAI_API_KEY=sk-your-openai-key-here

# DeepSeek AI (Recommended)
DEEPSEEK_API_KEY=sk-your-deepseek-key-here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=2000
DEEPSEEK_TEMPERATURE=0.7

# Notion Integration (optional)
NOTION_API_KEY=secret_your-notion-key-here
NOTION_DATABASE_ID=your-database-id-here

# Google Calendar (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5001/api/calendar/oauth2callback

# E-Mail Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM="Bodensee Immobilien <noreply@bimm-fn.de>"
ADMIN_EMAIL=admin@bimm-fn.de

# SendGrid Email Service (alternative to generic SMTP)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Webhook Notifications (optional)
NOTIFICATION_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Security Monitoring (optional)
SECURITY_WEBHOOK_URL=https://your-security-monitoring-service.com/webhook

# Calendar Configuration
CALENDAR_TIMEZONE=Europe/Berlin

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
